<%- include('layout/header')-%>
    <div class="container p-4 text-right">
        Options Panel
    </div>
    <div class="container">
        <h1 class="">
            <%= typeof fields !== 'undefined' ? 'Editar Categoría' : 'Crear Categoría' %>
        </h1>
        <p class="lead mb-4">Indica el nombre de la categoría y selecciona una imagen representativa.</p>
        <form action="/admin/categories<%= typeof fields !== 'undefined' ? '/update/'+fields.id : '' %>" method="POST">
            <div class="form-group">
                <label for="descInput">Nombre</label>
                <input id="descInput" class="form-control" type="text" name="name" value="<%= typeof fields !== 'undefined' ? fields.name : '' %>"
                />
            </div>
            <div class="form-group">
                <label for="imagePicker">Imagen Representativa</label>
                <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#imagePicker">
                    Seleccionar Imagen
                </button>
                <%- include('layout/image-picker')-%>
            </div>
            <button class="btn btn-primary" type="submit"><%= typeof fields !== 'undefined' ? 'Editar Categoría' : 'Crear Categoría' %></button>
        </form>
    </div>

    <%- include('layout/footer')-%>